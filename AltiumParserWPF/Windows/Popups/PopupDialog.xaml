<mui:ModernDialog
        Name="PopupWindow"
        x:Class="AltiumParserWPF.Windows.Popups.PopupDialog"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PopupDialog" Height="200" Width="300">


    <Grid  Margin="1">
        <TextBlock Name="TextBlock" Text="Enter some text" VerticalAlignment="Top" TextAlignment="Center" Height="30"/>
        <TextBox x:Name="ResponseTextBox" VerticalAlignment="Center" BorderBrush="LightGray" Height="25" />
        <Button Content="OK" Click="OKButton_Click" VerticalAlignment="Bottom" Height="25"/>
    </Grid>
</mui:ModernDialog>

