<Window x:Class="AltiumParserWPF.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AltiumParserWPF"
        mc:Ignorable="d"
        Title="StartupWindow" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>

        <Grid Margin="10" >
            <TextBlock Name="TextBlock" Text="Выберите файл печатной платы" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="FilePathTextBox" Height="25" Margin="0,0,76,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="Auto" BorderBrush="Black" TextChanged="FilePathTextBox_OnTextChanged"/>
            <Button Content="Browse" Click="BrowseButtonClick" Height="25" Width="75" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Button Content="Ok" Click="OkButtonClick" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>
